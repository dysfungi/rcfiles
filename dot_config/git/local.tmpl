[user]
    name = {{ .name | quote }}
    email = {{ .email | quote }}
[credential]
{{- if eq .chezmoi.os "darwin" }}
    # helper = git-credential-osxkeychain
    helper = git-credential-manager
{{- else if eq .chezmoi.os "linux" }}
    helper = git-credential-libsecret
{{- else }}
    # helper = store
    helper = git-credential-manager
{{- end }}
